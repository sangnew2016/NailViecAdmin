---
title: Shop
icon: fa fa-table
cdncss:
- https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/css/dataTables.bootstrap.min.css
cdnjs:
- https://maps.googleapis.com/maps/api/js?key=AIzaSyB7ze9OQmDCemwDf5ckTAbFrGHzbwG3mlI
- https://cdnjs.cloudflare.com/ajax/libs/gmaps.js/0.4.12/gmaps.min.js
- https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/jquery.dataTables.min.js
- https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.min.js
scripts:
- Metis.Shop()
---
<style>
    .form-control.col-lg-6 {
        width: 50% !important;
    }
    .button-add-shop-owner {
        margin-left: 10px;
        margin-bottom: 10px;
    }
    .row-shop-owner {
        cursor: pointer;
    }

    .dataTables_paginate a {
        padding-left: 15px;
        cursor: pointer;
    }

    .FlexEmbed-item {
        width: 100% !important;
        height: 300px !important;
        border: 1px solid #ccc;
        border-radius: 5px;
    }  
</style>

<!--Begin Datatables-->
<div class="row">
  <div class="col-lg-12">
        <div class="box">
            <header>
                <div class="icons"><i class="fa fa-table"></i></div>
                <h5>Nail Shop</h5>
            </header>
            <div id="dev-grid-shop-owner" class="body">
               <!-- generate grid-->
            </div>
            <div class="button-add-shop-owner">
                <button class="btn btn-primary" id="dev-add-shop-owner">Add Shop</button> 
                <button class="btn btn-default" id="dev-cancel-shop-owner">Cancel</button>               
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<!--End Datatables-->



<div class="row" id="dev-edit-shop-owner-area">
    <div class="col-lg-12">
        <div class="box">
            <header>
                <div class="icons"><i class="fa fa-th-large"></i></div>
                <h5>Edit Area</h5>
                <!-- .toolbar -->
            {{> toolbar}}
            <!-- /.toolbar -->

            </header>
            <div id="collapseOne" class="body">
                <form class="form-horizontal" id="dev-shop-Owner-validate">

                    <div class="form-group">
                        <label class="control-label col-lg-4">Shop Name</label>
                        <div class="col-lg-7">
                            <input type="text" id="ShopName" name="ShopName" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4">Shop Address</label>
                        <div class="col-lg-7">
                            <input type="text" id="ShopAddress" name="ShopAddress" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4">Longtitude</label>
                        <div class="col-lg-4">
                            <input type="text" id="Longtitude" name="Longtitude" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4">Latitude</label>
                        <div class="col-lg-4">
                            <input type="text" id="Latitude" name="Latitude" class="form-control">
                        </div>
                    </div>
                   

                    <div class="form-group">
                        <label class="control-label col-lg-4">Status</label>

                        <div class="col-lg-4" id="ShopStatusId" name="ShopStatusId">
                            <!-- generate combo -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4">Area</label>

                        <div class="col-lg-4" id="AreaId" name="AreaId">
                            <!-- generate combo -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4">Shop Owner</label>

                        <div class="col-lg-7" id="ShopOwnerId" name="ShopOwnerId">
                            <!-- generate combo -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4">Google Map</label>
                        <div class="col-lg-7">
                            <div id="mapByAddress" class="FlexEmbed-item"></div> 
                        </div>
                    </div>
                    

                    <div class="form-actions no-margin-bottom">
                        <input type="submit" class="btn btn-primary" value="Save Shop" />
                    </div>

                </form>
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
